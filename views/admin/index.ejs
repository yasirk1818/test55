<% layout('layout') -%>
<h2>All Users</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th>Admin</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.isAdmin ? "Yes" : "No" %></td>
        <td><%= user.isActive ? "Active" : "Inactive" %></td>
        <td>
          <form method="POST" action="/admin/user/<%= user._id %>/toggle" class="d-inline">
            <button class="btn btn-warning btn-sm">Toggle Active</button>
          </form>
          <a href="/admin/user/<%= user._id %>/devices" class="btn btn-info btn-sm">Devices</a>
          <a href="/admin/user/<%= user._id %>/replies" class="btn btn-secondary btn-sm">Replies</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
